<%- include('includes/header') %>

    <!-- Content -->
    <div class="container">

        <h3 class="mt-3 display-4">Dashboard</h3><hr>

          <!-- DataTable Usuários -->
          <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-table"></i>
              Últimos Usuários Cadastrados
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr class="text-center">
                      <th>ID</th>
                      <th>NOME</th>
                      <th>RESPONSÁVEL</th>
                      <th>DATA DE NASCIMENTO</th>
                      <th>SEXO</th>
                      <th>INDENTIFICAÇÃO</th>
                      <th>AÇÕES</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < lastUsers.length; i++){ %>
                    <tr class="text-center">
                      <td><%= lastUsers[i].id %></td>
                      <td><%= lastUsers[i].nome %></td>
                      <td><%= lastUsers[i].nome_responsavel %></td>
                      <td><%= lastUsers[i].data_nascimento %></td>
                      <td><%= lastUsers[i].sexo %></td>
                      <td><%= lastUsers[i].identificacao %></td>
                      <td><a href="/users/edit?user_id=<%= lastUsers[i].id %>">Detalhes</a></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- DataTable Casos -->
          <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-table"></i>
              Últimos Casos Cadastrados
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr class="text-center">
                      <th>ID</th>
                      <th>N˚ PROCESSO</th>
                      <th>USUÁRIO</th>
                      <th>DATA DE INCLUSÃO</th>
                      <th>DATA DE DESLIGAMENTO</th>
                      <th>ENCAMINHAMENTO</th>
                      <th>SITUAÇÃO</th>
                      <th>AÇÕES</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < lastCases.length; i++){ %>
                    <tr class="text-center">
                      <td><%= lastCases[i].id_caso %></td>
                      <td><%= lastCases[i].numero_caso %></td>
                      <td><%= lastCases[i].nome_usuario %></td>
                      <td><%= lastCases[i].data_inclusao %></td>
                      <td><%= lastCases[i].data_desligamento %></td>
                      <td><%= lastCases[i].encaminhamento %></td>
                      <td><%= lastCases[i].situacao %></td>
                      <td><a href="/cases/edit?case_id=<%= lastCases[i].id_caso %>">Detalhes</a></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
    </div>
    <!-- /.container -->

  <%- include('includes/footer') %>
